<div class="ember-power-calendar-nav">
  {{#if onMonthChange}}
    <button class="ember-power-calendar-nav-control ember-power-calendar-nav-control--previous" onclick={{publicAPI.actions.decreaseMonth}}>«</button>
  {{/if}}
  <div class="ember-power-calendar-nav-title">
    {{moment-format currentlyDisplayedMonth 'MMMM YYYY'}}
  </div>
  {{#if onMonthChange}}
    <button class="ember-power-calendar-nav-control ember-power-calendar-nav-control--next" onclick={{publicAPI.actions.increaseMonth}}>»</button>
  {{/if}}
</div>
<div class="ember-power-calendar-row ember-power-calendar-weekdays">
  {{#each dayNames as |name|}}
    <div class="ember-power-calendar-weekday">
      {{name}}
    </div>
  {{/each}}
</div>
<div class="ember-power-calendar-day-grid">
{{!-- <div class="ember-power-calendar-day-grid" onkeydown={{action "onKeyDown"}}> --}}
  {{#if onChange}}
    {{#each weeks key='id' as |week|}}
      <div class="ember-power-calendar-row ember-power-calendar-week">
        {{#each week.days key='id' as |day|}}
          <button
            data-date="{{day.id}}"
            class="ember-power-calendar-day {{if day.isCurrentMonth 'ember-power-calendar-day--current-month'}} {{if day.isSelected 'ember-power-calendar-day--selected'}} {{if day.isToday 'ember-power-calendar-day--today'}}"
            onclick={{action "clickDay" day}}>
            {{day.number}}
          </button>
        {{/each}}
      </div>
    {{/each}}
  {{else}}
    {{#each weeks key='id' as |week|}}
      <div class="ember-power-calendar-row ember-power-calendar-week">
        {{#each week.days key='id' as |day|}}
          <div
            data-date="{{day.id}}"
            class="ember-power-calendar-day {{if day.isCurrentMonth 'ember-power-calendar-day--current-month'}} {{if day.isSelected 'ember-power-calendar-day--selected'}} {{if day.isToday 'ember-power-calendar-day--today'}}">
            {{day.number}}
          </div>
        {{/each}}
      </div>
    {{/each}}
  {{/if}}

</div>

