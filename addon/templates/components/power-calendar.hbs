<div class="ember-power-calendar-nav">
  <button onclick={{publicAPI.actions.decreaseMonth}}>Prev</button>
  {{moment-format date 'MMMM YYYY'}}
  <button onclick={{publicAPI.actions.increaseMonth}}>Next</button>
</div>
<div class="ember-power-calendar-header">
  {{#each dayNames as |name|}}
    <div class="ember-power-calendar-day">
      {{name}}
    </div>
  {{/each}}
</div>
<div class="ember-power-calendar-day-grid" onkeydown={{action "onKeyDown"}}>
  {{#each weeks key='id' as |week|}}
    <div class="ember-power-calendar-week">
      {{#each week.days key='date' as |day|}}
        <button
          data-date="{{day.date}}"
          onclick={{action "clickDay" day}}
          onfocus={{action 'onFocusDay' day}}
          onblur={{action 'onBlurDay'}}
          class="ember-power-calendar-day {{if day.isCurrentMonth 'ember-power-calendar-day--current-month'}} {{if day.isToday 'ember-power-calendar-day--today'}} {{if day.isSelected 'ember-power-calendar-day--selected'}} {{if day.isFocused 'ember-power-calendar-day--focused'}}">
          {{day.number}}
        </button>
      {{/each}}
    </div>
  {{/each}}
</div>

